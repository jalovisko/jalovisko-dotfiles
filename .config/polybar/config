[module/pulseaudio-control]
type = custom/script
tail = true
format-underline = ${colors.primary}
label-padding = 2
label-foreground = ${colors.primary}

# Icons mixed from Font Awesome 5 and Material Icons
# You can copy-paste your options for each possible action, which is more
# trouble-free but repetitive, or apply only the relevant ones (for example
# --node-blacklist is only needed for next-sink).
# Nicknames for audio devices
exec = pulseaudio-control --icons-volume "ÔÄß ,ÔÄ® " --icon-muted "ÔÄ¶ "  --node-nicknames-from "device.description" --node-nickname "alsa_output.pci-0000_09_00.1.hdmi-stereo:Ô°∏  Monitor" --node-nickname "alsa_output.usb-Logitech_Logitech_G430_Gaming_Headset-00.analog-stereo:Ôüä  Headphones" --node-nickname "alsa_output.usb-Razer_Razer_Kraken_Ultimate_00000000-00.analog-stereo:Ôüä  Headphones" --node-nickname "alsa_output.pci-0000_0b_00.4.analog-stereo:ÔßÇ Speakers" --node-nickname "alsa_output.pci-0000_04_00.6.HiFi__hw_Generic__sink:Óå≠ Speakers" listen

click-right = exec pavucontrol &
click-left = pulseaudio-control togmute
click-middle = pulseaudio-control --node-blacklist "alsa_output.pci-0000_01_00.1.hdmi-stereo-extra2" next-node
scroll-up = pulseaudio-control --volume-max 130 up
scroll-down = pulseaudio-control --volume-max 130 down

